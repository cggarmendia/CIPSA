@model IEnumerable<CIPSA.M_XI.WebUI.Models.RentedArticleModel>

@{
    ViewBag.Title = "Listar Artículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row top-buffer">
    <div class="col-md-6">
        <div class="form-inline paddingTop20">
            <fieldset>
                <legend class="text-center header">Artículos</legend>
                <div class="row text-center">
                    @Html.RadioButton("rentedArticleOption", "Películas", true, new { id = "findMovie" })Películas
                    @Html.RadioButton("rentedArticleOption", "Videojuegos", false, new { id = "findGame" })Videojuegos
                </div>
                <div class="row">
                    <label class="paddingTop20 paddingBottom20">
                        <span class="marginRight20">Exportar:</span>
                        <span id="tableExport" class="row form-inline tableExportButton" />
                    </label>
                </div>
                <div class="form-group paddingTop20">
                    <table id="articles_table" class="display widthFullScreen">
                        <thead>
                            <tr>
                                <th>
                                    ID_ARTICULO
                                </th>
                                <th>
                                    Título
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ArticleId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ArticleName)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-inline paddingTop20">
            <fieldset>
                <legend class="text-center header">Datos Alquiler</legend>
                <div id="rentedDataInfo">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="birthday" class="col-md-4">NIF:</label>
                            <input type="text" class="form-control col-md-8" id="nif" readonly>
                        </div>
                    </div>
                    <div class="row marginTop5">
                        <div class="form-group col-md-12">
                            <label for="name" class="col-md-4">Nombre:</label>
                            <input type="text" class="form-control col-md-8" id="name" maxlength="9" readonly>
                        </div>
                    </div>
                    <div class="row marginTop5">
                        <div class="form-group col-md-12">
                            <label for="lastName" class="col-md-4">Apellidos:</label>
                            <input type="text" class="form-control col-md-8" id="lastName" maxlength="9" readonly>
                        </div>
                    </div>
                    <div class="row top-buffer">
                        <div class="form-group col-md-12">
                            <label for="birthday" class="col-md-4">Fecha Alquiler:</label>
                            <input type="text" class="form-control col-md-8" id="rentalDate" readonly>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/Scripts/App/m_XI.shop.r" +
    "entedArticles.js")
}
