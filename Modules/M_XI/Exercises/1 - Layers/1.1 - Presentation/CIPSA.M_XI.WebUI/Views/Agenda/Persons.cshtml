@model IEnumerable<CIPSA.M_XI.WebUI.Models.EmployeeModel>

@{
    ViewBag.Title = "Listas Personas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personas</h2>

<label class="paddingTop20 paddingBottom20">
    <span class="marginRight20">Exportar:</span>
    <span id="tableExport" class="row form-inline tableExportButton" />
</label>

<div class="form-group">
    <table id="employee_table" class="display" style="width:100%">
        <thead>
            <tr>
                <th>
                    DNI
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellidos
                </th>
                <th>
                    Teléfono
                </th>
                <th>
                    Fecha de Nacimiento
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DNI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/Scripts/App/m_XI.agenda.persons.js")
}